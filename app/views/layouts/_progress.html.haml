#main_itinerary
  %canvas{width: '892', height: '60', id: 'progress_bar'}
  #boomerang_path.hide
    = image_path 'std/trail-boomerang.png'
  %a{href: '/home'}
    .boxy1.level2
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(0)}">
      .inside_sign
        .ib_text
          Home
      </div>
  %a{href: '/start/outback'}
    .boxy2.level3.start_hover
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(1)}">
      .inside_sign
        .ib_text
          Start Safari
      </div>    
      <div ng-show="show_signpost('Start')">
      .bar.start_gator
      </div>
  %a{href: '/bias/banishing'}
    .boxy3.level1.next_hover
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(2)}">
      .inside_sign
        .ib_text
          Bias
      </div>    
      <div ng-show="show_signpost('Bias')">      
      .bar.next_gator
      </div>
  %a{href: '/sample/enough'}
    .boxy4.level2.next_hover
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(3)}">
      .inside_sign
        .ib_text
          Sample Size
      </div>
      <div ng-show="show_signpost('Sample')">
      .bar.next_gator
      </div>
  %a{href:'/fields/enter'}
    .boxy5.level1.next_hover
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(4)}">
      .inside_sign
        .ib_text
          HDF-N vs HDF-S
      </div>
      <div ng-show="show_signpost('HDFN')">
      .bar.next_gator
      </div>
  %a{href: '/last_stop/question'}
    .boxy6.level3.last_hover
      <div class='outside_sign' ng-class="{itin_visited: signpost_visited(5)}">
      .inside_sign
        .ib_text
          Last Stop
      </div>
      <div ng-show="show_signpost('Last')">
      .bar.last_gator
      </div>